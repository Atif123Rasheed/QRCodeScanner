<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/qr_code_scanner"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/qr_scanner2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/qr_code_generator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313">

    </ImageButton>

    <ImageButton
        android:id="@+id/qr_code_generator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/qr_code_generator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/qr_code_scanner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313">

    </ImageButton>

    <ImageButton
        android:id="@+id/whatsapp_webscan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/whatsapp_code_scanner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/qr_code_generator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qr_code_scanner"
        app:layout_constraintVertical_bias="0.313">

    </ImageButton>

    <ImageButton
        android:id="@+id/direct_chat"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/direct_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/whatsapp_webscan"
        app:layout_constraintTop_toBottomOf="@id/qr_code_generator"
        app:layout_constraintVertical_bias="0.313">

    </ImageButton>


</androidx.constraintlayout.widget.ConstraintLayout>